      "ui": {
        "buttons": [
          {
            "label": "購入手続きへ",
            "visible_when": "未販売かつ自分の出品ではない",
            "navigates_to": "/buy/:itemId"
          },
          {
            "label": "売り切れました",
            "visible_when": "販売済み",
            "disabled": true
          }
        ],
        "like": {
          "action": "ハートをクリックでトグル",
